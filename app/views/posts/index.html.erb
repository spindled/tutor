<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Comment</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.name %></td>
    <td><%=h post.comment %></td>
    <td><%= link_to 'Show', lesson_post_path(params[:lesson_id], post) %></td>
    <td><%= link_to 'Edit', edit_lesson_post_path(params[:lesson_id], post) %></td>
    <td><%= link_to 'Destroy', lesson_post_path(params[:lesson_id], post), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_lesson_post_path(params[:lesson_id]) %>